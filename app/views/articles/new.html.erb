<h1>Create Article</h1>

<% if @article.errors.any?%>
<h2>Correct these errors </h2>
    <ul>
        <% @article.errors.full_messages.each do |msg|%>
            <li><%= msg%></li>
        <%end%>
    </ul>
<%end%>

<%= form_with scope: :article, url: articles_path, local: true do |f|%>
<p>
    <%= f.label :title%><br/>
    <%= f.text_field :title%>

</p>
<p>
    <%= f.label :desc%>
    <br/>
    <%= f.text_area :desc%>

</p>
<p>
    <%= f.submit %>
</p>

<%end%>